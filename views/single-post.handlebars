<div>
    <div>
        <a href="/blog/{{id}}">{{title}}</a>
    </div>
    <div class="content">
        {{content}}
    </div>
    <div>
        <p>Posted By: {{user.userName}}</p>
    </div>
</div>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">Add Comment</button>
  </div>
</form>
{{/if}}

